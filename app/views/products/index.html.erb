<p id="notice"><%= notice %></p>

<h1>Tour Request History</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Time</th>
      <th>Price</th>
      <th>Extra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.time %></td>
        <td><%= product.price %></td>
        <td><%= product.extra %></td>
        <td><%= link_to 'Show Info', product %></td>
        <td><%= link_to 'Edit Tour Details', edit_product_path(product) %></td>
        <td><%= link_to 'Remove Request', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

